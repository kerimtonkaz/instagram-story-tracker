{
    "manifest_version": 3,
    "name": "Instagram Hikaye Takipçisi",
    "version": "1.0.0",
    "description": "Instagram hikayelerinizi görüntüleyen kullanıcıları takip edin ve bildirim alın.",
    "author": "kerimtonkaz",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Instagram Hikaye Takipçisi"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "tabs",
        "scripting",
        "offscreen"
    ],
    "host_permissions": [
        "https://www.instagram.com/*",
        "https://instagram.com/*"
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://www.instagram.com/stories/*"],
            "js": ["content/content.js"],
            "css": ["content/content.css"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/sounds/*.mp3",
                "lib/izitoast/*"
            ],
            "matches": ["https://www.instagram.com/*"]
        }
    ]
}
