{
    "manifest_version": 3,
    "name": "Instagram Hikaye Takipçisi",
    "version": "1.2.0",
    "description": "Instagram hikayelerinizi görüntüleyen kullanıcıları takip edin, bildirim alın ve otomatik engelleme yapın.",
    "author": "kerimtonkaz",
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Instagram Hikaye Takipçisi",
        "default_icon": {
            "16": "assets/icons/icon.png",
            "32": "assets/icons/icon.png",
            "48": "assets/icons/icon.png",
            "128": "assets/icons/icon.png"
        }
    },
    "icons": {
        "16": "assets/icons/icon.png",
        "32": "assets/icons/icon.png",
        "48": "assets/icons/icon.png",
        "128": "assets/icons/icon.png"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "tabs",
        "scripting",
        "offscreen"
    ],
    "host_permissions": [
        "https://www.instagram.com/*",
        "https://instagram.com/*"
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://www.instagram.com/stories/*"],
            "js": ["content/content.js"],
            "css": ["content/content.css"],
            "run_at": "document_idle"
        },
        {
            "matches": ["https://www.instagram.com/*"],
            "js": ["content/auto-block-content.js"],
            "run_at": "document_idle",
            "exclude_matches": ["https://www.instagram.com/stories/*"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/sounds/*.mp3",
                "lib/izitoast/*"
            ],
            "matches": ["https://www.instagram.com/*"]
        }
    ]
}
